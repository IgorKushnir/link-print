{
  "bracketSpacing": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "jsxBracketSameLine": true,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "useTabs": false,
  "semi": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "src/*.jsx",
      "options": {
        "printWidth": 80
      }
    },
    {
      "files": ["*.html", "*.scss"],
      "options": {
        "printWidth": 140
      }
    }
  ]
}
